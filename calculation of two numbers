try:
    a=int(input("enter number:"))
    b=int(input("enter number:"))
    def plus(a,b):
        x=a+b
        print("addition of two values is:",x)
    plus(a,b)
    def minus(a,b):
        x=a-b
        print("substraction of two values is:",x)
    minus(a,b)
    def multiply(a,b):
        x=a*b
        print("multiplication of two values is:",x)
    multiply(a,b)
    def divide(a,b):
        x=a//b
        print("divide of two values is:",x)
    divide(a,b)
except:
    print("only numbers allowed")
    
    
    
    
