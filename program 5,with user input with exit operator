calculation=0
while True:
    operator = input("Give me an operator: ")
    if operator  in [ "+","-","/","*"]:
        calculation+=1
        try:
            a= int(input("Enter a number: "))
            b = int(input("Enter a number: "))
            def plus(a, b):
                x = a + b
                print("addition of two values is:", x)
            plus(a, b)
            def minus(a, b):
                x = a - b
                print("substraction of two values is:", x)
            minus(a, b)
            def multiply(a, b):
                x = a * b
                print("multiplication of two values is:", x)
            multiply(a, b)
            def divide(a, b):
                x = a // b
                print("divide of two values is:", x)
            divide(a, b)
        except ValueError:
            print("Please enter an integer")
    elif operator == "exit":
        print("***number of calculations:", calculation)
        break
    elif operator=="":
        print("type operator")
    else:
        pass
        
        
        
        
OUTPUT:


